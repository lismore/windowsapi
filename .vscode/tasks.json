{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build hello world",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "${workspaceFolder}\\src\\HelloWorld\\helloWorld.cpp",
                "-o",
                "helloWorld.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build hello world 1",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "${workspaceFolder}\\src\\HelloWorld.1\\helloWorld1.cpp",
                "-o",
                "c:/GitHub/windowsapi/src/HelloWorld.1/helloWorld1"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}